{% extends "::layout.html.twig" %}

{% block body %}
Rencontre à l'extérieur : 
{{ form(form) }}

<table class="table table-hover table-bordered">
  <tr class="info">
    <th>Date</th>
    <th>Heure Match</th>
    <th>Score</th>        
    <th>Equipe à domicile</th>
    <th>Equipe adverse</th>    
  </tr>
  
{% for r in allRencontreExt %}
  <tr class="success">
  <td>
    {{ r.date |date("d/m/Y") }}  
  </td>  
  <td>
    {{r.heureMatch |date("h:m")}}
  </td>
  <td>
    {% if r.score is null %}
      score à renseigner
      {% else %}
    {{r.score}}
    <a href="#" class="btnAddProductVersion" id="addProductVersion" name="addProductVersion" title="add product version"> Add </a>

    {% endif %}
  </td>    
  <td>
    {{r.equipeDom.club}} -
    {{r.equipeDom.categorie.sigle}}
  </td>
  <td>
    {{r.equipeAdv.club}} - 
    {{r.equipeAdv.categorie.sigle}}
  </td> 
  </tr>
  {% endfor %}
  
</table>
